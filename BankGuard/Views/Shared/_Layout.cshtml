@using BankGuard.Core.Application.Dtos.Account
@using BankGuard.Core.Application.Helpers;
@using BankGuard.Core.Application.ViewModels.User;
@inject IHttpContextAccessor httpcontexaccessor;

@{
    var user = httpcontexaccessor.HttpContext.Session.Get<AuthenticationResponse>("user");
    var isAdmin = user != null ? user.Role.Any(r => r == "Admin") : false;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BankGuard</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BankGuard.styles.css" asp-append-version="true" />
</head>
<body>
    @if (user!=null)
    {
        <div class="d-md-flex  align-items-center justify-content-center gap-3 me-2">

            <header>
                <nav class="border-bottom box-shadow mb-3 position-sticky top-0 d-flex align-items-center">
                    <div class="container-fluid d-flex flex-md-column justify-content-center nav-cool">
                    <a class="navbar-brand " asp-area="" asp-controller="Basic" asp-action="Index">BankGuard</a>
                        <div class="justify-content-between ">
                            <ul class=" d-flex flex-sm-row flex-md-column flex-grow-1">
                            @if(isAdmin){
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="Home">Home</a>
                            </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="UserManager">User Manager</a>
                                    </li>
                            }else{
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Basic" asp-action="Index">
                                            <span>
                                                <svg xmlns="http://www.w3.org/2000/svg" width="30px" viewBox="0 0 24 24" fill="currentColor" class="size-6">
                                                    <path d="M11.47 3.841a.75.75 0 0 1 1.06 0l8.69 8.69a.75.75 0 1 0 1.06-1.061l-8.689-8.69a2.25 2.25 0 0 0-3.182 0l-8.69 8.69a.75.75 0 1 0 1.061 1.06l8.69-8.689Z" />
                                                    <path d="m12 5.432 8.159 8.159c.03.03.06.058.091.086v6.198c0 1.035-.84 1.875-1.875 1.875H15a.75.75 0 0 1-.75-.75v-4.5a.75.75 0 0 0-.75-.75h-3a.75.75 0 0 0-.75.75V21a.75.75 0 0 1-.75.75H5.625a1.875 1.875 0 0 1-1.875-1.875v-6.198a2.29 2.29 0 0 0 .091-.086L12 5.432Z" />
                                                </svg>
                                            </span>Home
                                        </a>
                                    </li>
                                    <div class="dropdown">
                                        <button class="btn dropdown-toggle ps-3 d-flex align-items-center" data-bs-toggle="dropdown">
                                            <div class=" d-flex flex-column align-items-center flex-md-row">

                                            <span>
                                                <svg xmlns="http://www.w3.org/2000/svg"width="30px" viewBox="0 0 24 24" fill="currentColor" class="size-6">
                                                    <path d="M10.464 8.746c.227-.18.497-.311.786-.394v2.795a2.252 2.252 0 0 1-.786-.393c-.394-.313-.546-.681-.546-1.004 0-.323.152-.691.546-1.004ZM12.75 15.662v-2.824c.347.085.664.228.921.421.427.32.579.686.579.991 0 .305-.152.671-.579.991a2.534 2.534 0 0 1-.921.42Z" />
                                                    <path fill-rule="evenodd" d="M12 2.25c-5.385 0-9.75 4.365-9.75 9.75s4.365 9.75 9.75 9.75 9.75-4.365 9.75-9.75S17.385 2.25 12 2.25ZM12.75 6a.75.75 0 0 0-1.5 0v.816a3.836 3.836 0 0 0-1.72.756c-.712.566-1.112 1.35-1.112 2.178 0 .829.4 1.612 1.113 2.178.502.4 1.102.647 1.719.756v2.978a2.536 2.536 0 0 1-.921-.421l-.879-.66a.75.75 0 0 0-.9 1.2l.879.66c.533.4 1.169.645 1.821.75V18a.75.75 0 0 0 1.5 0v-.81a4.124 4.124 0 0 0 1.821-.749c.745-.559 1.179-1.344 1.179-2.191 0-.847-.434-1.632-1.179-2.191a4.122 4.122 0 0 0-1.821-.75V8.354c.29.082.559.213.786.393l.415.33a.75.75 0 0 0 .933-1.175l-.415-.33a3.836 3.836 0 0 0-1.719-.755V6Z" clip-rule="evenodd" />
                                                </svg>
                                            </span><span>Payment</span>
                                            </div>
                                        </button>
                                        <ul class="dropdown-menu">
                                            <li class="dropdown-item">
                                                <a class="nav-link text-dark" asp-area="" asp-controller="Payment" asp-action="Express">Express </a>
                                            </li>
                                            <li class="dropdown-item">
                                                <a class="nav-link text-dark" asp-area="" asp-controller="Payment" asp-action="CreditCard">Credict Card</a>
                                            </li>
                                            <li class="dropdown-item">
                                                <a class="nav-link text-dark" asp-area="" asp-controller="Payment" asp-action="Loan">Loan</a>
                                            </li>
                                            <li class="dropdown-item">
                                                <a class="nav-link text-dark" asp-area="" asp-controller="Payment" asp-action="Beneficiaries">Beneficiaries</a>
                                            </li>

                                        </ul>
                                    </div>
                                
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Payment" asp-action="CashAdvance">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="30px" viewBox="0 0 24 24" fill="currentColor" class="size-6">
                                                <path d="M12 7.5a2.25 2.25 0 1 0 0 4.5 2.25 2.25 0 0 0 0-4.5Z" />
                                                <path fill-rule="evenodd" d="M1.5 4.875C1.5 3.839 2.34 3 3.375 3h17.25c1.035 0 1.875.84 1.875 1.875v9.75c0 1.036-.84 1.875-1.875 1.875H3.375A1.875 1.875 0 0 1 1.5 14.625v-9.75ZM8.25 9.75a3.75 3.75 0 1 1 7.5 0 3.75 3.75 0 0 1-7.5 0ZM18.75 9a.75.75 0 0 0-.75.75v.008c0 .414.336.75.75.75h.008a.75.75 0 0 0 .75-.75V9.75a.75.75 0 0 0-.75-.75h-.008ZM4.5 9.75A.75.75 0 0 1 5.25 9h.008a.75.75 0 0 1 .75.75v.008a.75.75 0 0 1-.75.75H5.25a.75.75 0 0 1-.75-.75V9.75Z" clip-rule="evenodd" />
                                                <path d="M2.25 18a.75.75 0 0 0 0 1.5c5.4 0 10.63.722 15.6 2.075 1.19.324 2.4-.558 2.4-1.82V18.75a.75.75 0 0 0-.75-.75H2.25Z" />
                                            </svg>CashAdvance
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Basic" asp-action="Beneficiaries">
                                            <span>
                                                <svg xmlns="http://www.w3.org/2000/svg" width="30px" viewBox="0 0 24 24" fill="currentColor" class="size-6">
                                                    <path d="M4.5 6.375a4.125 4.125 0 1 1 8.25 0 4.125 4.125 0 0 1-8.25 0ZM14.25 8.625a3.375 3.375 0 1 1 6.75 0 3.375 3.375 0 0 1-6.75 0ZM1.5 19.125a7.125 7.125 0 0 1 14.25 0v.003l-.001.119a.75.75 0 0 1-.363.63 13.067 13.067 0 0 1-6.761 1.873c-2.472 0-4.786-.684-6.76-1.873a.75.75 0 0 1-.364-.63l-.001-.122ZM17.25 19.128l-.001.144a2.25 2.25 0 0 1-.233.96 10.088 10.088 0 0 0 5.06-1.01.75.75 0 0 0 .42-.643 4.875 4.875 0 0 0-6.957-4.611 8.586 8.586 0 0 1 1.71 5.157v.003Z" />
                                                </svg>
                                            </span>Beneficiaries
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Payment" asp-action="Transfer">
                                            <span>
                                                <svg xmlns="http://www.w3.org/2000/svg"width="30px" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                                                    <path stroke-linecap="round" stroke-linejoin="round" d="M7.5 21 3 16.5m0 0L7.5 12M3 16.5h13.5m0-13.5L21 7.5m0 0L16.5 12M21 7.5H7.5" />
                                                </svg>
                                            </span> Transfer
                                        </a>
                                    </li>
                            }
                            </ul>
                    </div>
                        <ul class="navbar-nav">
                        <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="LogOut">
                                    <span>
                                        <svg xmlns="http://www.w3.org/2000/svg" width="30px" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                                            <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 9V5.25A2.25 2.25 0 0 1 10.5 3h6a2.25 2.25 0 0 1 2.25 2.25v13.5A2.25 2.25 0 0 1 16.5 21h-6a2.25 2.25 0 0 1-2.25-2.25V15m-3 0-3-3m0 0 3-3m-3 3H15" />
                                        </svg>
                                    </span> Log out
                                </a>
                        </li>
                        </ul>
                </div>
            </nav>
        </header>
            <div class="container-cool ">
                <main role="main" class="container-cool ">
                @RenderBody()
            </main>
        </div>
        </div>
    }else{
        <div class="" style="height:90vh">
            <main role="main" class="pb-3  w-100 h-100  d-flex flex-column flex-md-row align-items-center justify-content-center">
                @RenderBody()
            </main>
        </div>
    }

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - BankGuard
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
